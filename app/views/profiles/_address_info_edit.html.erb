<% rounded_med_corner(:id => "contact_info", :title => t('profile.contact_info')) do %>
  <%= p.labelled_text_field(t('profile.location'), :location, :wrap_class => cycle(:row_light2, :row_dark2)) %>
  <%= p.labelled_text_field(t('profile.address1'), :address_line1,:wrap_class => cycle(:row_light2, :row_dark2)) %>
  <%= p.labelled_text_field(t('profile.address2'), :address_line2, :wrap_class => cycle(:row_light2, :row_dark2)) %>
  <%= p.labelled_text_field(t('profile.city'), :city, :wrap_class => cycle(:row_light2, :row_dark2)) %>
  <%= p.labelled_text_field(t('profile.postal_code'), :postal_code, :wrap_class => cycle(:row_light2, :row_dark2)) %>
  <%= p.labelled_text_field(t('profile.state'), :state, :wrap_class => cycle(:row_light2, :row_dark2)) %>
  <%= p.labelled_country_select(t('profile.country'), :country,["India"],:wrap_class => cycle(:row_light2, :row_dark2)) %>
  <%= p.labelled_text_field(t('profile.landline'), :landline, :wrap_class => cycle(:row_light2, :row_dark2)) %>
  <%= p.labelled_text_field(t('prfile.mobile'), :mobile, :wrap_class => cycle(:row_light2, :row_dark2)) %>
<% end %>
