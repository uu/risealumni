<% rounded_med_corner(:id => 'general_info', :title => t('profile.general_info')) do %>
  <% fields_for :user, @user do |u| %>
    <% u.label_class = 'label_margin' %>
    <%= u.labelled_text_field(t('login'),:login, :wrap_class => cycle(:row_light2, :row_dark2)) %>
  <% end %>
  <%= p.labelled_collection_select(t('title'),:title,TITLES,:first, :first, {:wrap_class => cycle(:row_light2, :row_dark2), :include_blank => true}) %>
  <%= p.labelled_text_field(t('account.first_name'), :first_name, :wrap_class => cycle(:row_light2, :row_dark2)) %>
  <%= p.labelled_text_field(t('account.middle_name'),:middle_name, :wrap_class => cycle(:row_light2, :row_dark2)) %>
  <%= p.labelled_text_field(t('account.last_name'),:last_name, :wrap_class => cycle(:row_light2, :row_dark2)) %>
  <%= p.labelled_text_field(t('account.maiden_name'),:maiden_name, :wrap_class => cycle(:row_light2, :row_dark2)) %>
  <%= p.labelled_collection_select(t('account.gender'),:gender,Profile::GENDER_FIELDS,:first, :first, {:wrap_class => cycle(:row_light2, :row_dark2), :include_blank => true}) %>
  <%= p.labelled_collection_select(t('account.blood_group'),:blood_group,Profile::BLOOD_GROUPS,:first, :first, {:wrap_class => cycle(:row_light2, :row_dark2), :include_blank => true}) %>
  <%= p.labelled_collection_select(t('groups'), :group, GROUPS.reject{|obj| GROUPS.first==obj},:first, :first,:wrap_class => cycle(:row_light2, :row_dark2)) %>                                  
  <%= p.labelled_collection_select(t('account.house_name'),:house_name,HOUSE_NAMES,:first, :first, {:wrap_class => cycle(:row_light2, :row_dark2), :include_blank => true}) %>
  <%= p.labelled_text_field(t('account.date_of_birth'),:date_of_birth, :class => "datefield datebalks" ,:wrap_class => cycle(:row_light2, :row_dark2)) %>
  <%= p.labelled_collection_select(t('account.relationship_status'),:relationship_status,Profile::RELATIONSHIP_STATUS,:first, :first, {:wrap_class => cycle(:row_light2, :row_dark2), :include_blank => true}) %>
  <%= p.labelled_text_field(t('account.anniversary'),:anniversary_date, :class => "datefield datebalks" ,:wrap_class => cycle(:row_light2, :row_dark2)) %>
  <%= p.labelled_text_field(t('account.spouse_name'),:spouse_name, :wrap_class => cycle(:row_light2, :row_dark2)) %>
  <%= p.labelled_text_field(t('account.professional_qualification'),:professional_qualification, :wrap_class => cycle(:row_light2, :row_dark2)) %>
  <%= p.labelled_text_area(t('account.about_me'),:about_me, :wrap_class => "row_dark_large2") %>
  <%= p.labelled_text_area(t('account.activities'),:activities, :wrap_class => "row_light_large2") %>
<% end %>
<input type="hidden" name="switch" value="name" />

