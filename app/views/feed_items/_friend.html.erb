<%-
#locals
feed_item ||= @feed_item



friendship = feed_item.item
inviter = friendship.inviter
invited = friendship.invited 
-%>

<div id="<%= feed_item.dom_id %>">
  <div class="comments">
    <img src="/images/add_new_friends.gif" title="<%= t('feed_item.friends_icon') %>" alt="<%= t('feed_item.friends_icon') %>" /> 
    <strong><%= t('feed_item.user_invited', :inviter => link_to(h(inviter.full_name), inviter), :description => friendship.description(inviter), :invited => link_to(h(invited.full_name), invited) %>. </strong>
  </div>
  <%= x_feed_link(feed_item) if me %>
</div>
