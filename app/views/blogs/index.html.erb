<script type="text/javascript">
  <%= @facebook_publish_feed_story %>
</script>
<% content_for :head do  -%>
  <%= auto_discovery_link_tag :rss, profile_blogs_url(@profile, :rss), :title=>t('blog.rss', :user => @profile.full_name %>
<% end -%>

<div id="column_l">
  <h2 class="page_title"><%= t('blog.rss', :user => @profile.full_name %>
    <%= link_to image_tag('add_new_post.png', 
                          :title=> t('blog.create') , 
                          :class=>"add_new_post2"), 
                new_profile_blog_path(@profile) if me %>
  </h2>
  <% if @blogs.empty? %>
    <div class="widget_large">
      
      <div class="comments"><%= t('blog.user_has_no_blogs', :user => @profile.full_name %></div>
      <span class="widget_lrg_btm"></span>
    </div>
  <% else %>
    <%= render :partial => 'blogs/blog', :collection => @blogs %>
    <div class="clear_div"></div>     
    <%= will_paginate @blogs%>
  <% end %>
</div>
