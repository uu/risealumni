<%
# locals
if @feedback.profile
  name = @feedback.profile.full_name
  email = @feedback.profile.email
else
  name = @feedback.name
  email = @feedback.email
end

%>

<div class="activity_box">
  <h2><%= @feedback.subject %></h2>
  <%= t('message') %> :<%= @feedback.message %><br/>
  <%= t('name') %> :<%= name %><br/>
  <%= t('email') %> :<%= email %><br/>
  <div class="clear"></div>
</div>
